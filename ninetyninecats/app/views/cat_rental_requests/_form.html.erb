<% if action == :new%>
<%action_url =  cat_rental_requests_url %>
<% else%>
<% cat_rental_request_url(crr) %>
<%end%>

<form action="<%=action_url%>" method="post">
  <% if action == :edit %>
    <input type="hidden" name="_method" value="PATCH">
  <% end %>

  Cat : <br><select name="cat_rental[cat_id]">
    <option disabled <%= 'selected' unless crr.cat_id%>>-- select a cat --</option>
    <% Cat.all.each do |cat| %>
      <option value= <%= cat.id %> ><%=cat.name%></option>
    <% end %>
  </select><br>
  Start Date <input type="date" name="cat_rental[start_date]" value=""><br>
  End Date <input type="date" name="cat_rental[end_date]" value=""><br>
  <input type="submit" value="<%= action == :new ? 'Add your rental to database!' : 'Edit your rental!' %>">

</form>
